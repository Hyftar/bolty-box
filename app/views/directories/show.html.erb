<div class="directory-index-container">
  <%= link_to @directory.parent ? directory_path(@directory.parent) : directories_path, class: "directory-index-return" do %>
    <%= fa_icon 'arrow-left' %>
    <span class="directory-button-text">Parent folder</span>
  <% end %>
  <%= render partial: 'list_dirs', locals: { directories: @directories } %>
  <%= render partial: 'assets/list_assets', locals: { directory: @directory } %>
</div>
