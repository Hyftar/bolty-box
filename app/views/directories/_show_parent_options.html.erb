<div class="directory-links-line">
  <%= link_to (directory.parent ?
               directory_path(directory.parent) :
               (directory.owner == current_user ? directories_path : share_path)),
      class: "basic-button has-right-margin" do %>
  <div>
    <%= fa_icon 'arrow-left' %>
    <span class="directory-button-text">Parent folder</span>
  </div>
  <% end %>

  <div class="spacer"></div>

  <%= link_to new_directory_asset_path(directory), class: 'basic-button has-right-margin' do %>
  <div>
    <%= fa_icon 'plus' %>
    <span class="directory-button-text">Add file</span>
  </div>
  <% end %>

  <%= link_to new_directory_path(parent_id: directory.id), class: 'basic-button' do %>
  <div>
    <%= fa_icon 'plus' %>
    <span class="directory-button-text">Add folder</span>
  </div>
  <% end %>

</div>
