<% if current_user.owner?(@directory) %>
  <div class="spacer"></div>
    <div class="directory-links-line">
      <div class="spacer"></div>
      <%= link_to 'Share this directory', directory_add_to_share_path(directory), class: 'has-right-margin basic-button' %>
      <%= link_to 'Destroy this directory', directory_path(directory), method: :delete, data: {confirm: "Are you sure you wanna destroy this directory"}, class: "basic-button" %>
    </div>
<% end %>
